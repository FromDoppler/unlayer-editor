{
  "name": "unlayer-editor",
  "version": "0.1.0",
  "private": true,
  "resolutions": {
    "@types/react": "18.0.24"
  },
  "devDependencies": {
    "@types/jest": "29.2.1",
    "@types/node": "18.11.9",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@types/react-email-editor": "1.5.1",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "babel-jest": "29.2.2",
    "dotenv": "16.0.3",
    "dotenv-flow-webpack": "1.1.0",
    "eclint": "2.8.1",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.10",
    "jest": "29.2.2",
    "npm-watch": "0.11.0",
    "prettier": "2.7.1",
    "prop-types": "15.8.1"
  },
  "dependencies": {
    "@babel/core": "7.19.6",
    "@babel/preset-env": "7.19.4",
    "@babel/preset-react": "7.18.6",
    "@formatjs/intl": "2.5.1",
    "babel-loader": "9.0.1",
    "concurrently": "7.5.0",
    "css-loader": "6.7.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "enzyme-to-json": "3.6.2",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "jsdom": "20.0.2",
    "path": "0.12.7",
    "process": "0.11.10",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-email-editor": "1.6.3",
    "style-loader": "3.3.1",
    "styled-components": "5.3.6",
    "ts-loader": "9.4.1",
    "typescript": "4.8.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1",
    "webpack-manifest-plugin": "5.0.0"
  },
  "watch": {
    "custom-js-build": {
      "patterns": [
        "src/customJs"
      ],
      "extensions": "js"
    }
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm:custom-js-watch\" \"npm:dev-server\"",
    "dev-server": "webpack-dev-server --env NODE_ENV=development --config webpack-dev-server.config.js",
    "custom-js-build": "webpack --env NODE_ENV=development",
    "custom-js-watch": "npm-watch custom-js-build",
    "build": "webpack --env NODE_ENV=production",
    "test": "jest",
    "coverage:local": "jest --coverage --watchAll",
    "coverage:ci": "jest --coverage",
    "verify-format": "yarn eslint-check && yarn prettier-check && yarn eclint-check",
    "fix-format": "yarn prettier-fix && yarn eclint-fix",
    "eclint-fix": "eclint fix",
    "eclint-check": "eclint check",
    "eslint-check": "eslint --ext .ts --ext .tsx .",
    "prettier-fix": "prettier --write \"**/**\"",
    "prettier-check": "prettier --check \"**/**\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/customJs/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./src/setupTests.js"
    ]
  }
}
