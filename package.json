{
  "name": "unlayer-editor",
  "version": "0.1.0",
  "private": true,
  "resolutions": {
    "@types/react": "18.2.47"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "29.5.11",
    "@types/node": "18.19.6",
    "@types/react": "18.2.47",
    "@types/react-dom": "18.2.18",
    "@types/react-email-editor": "1.5.5",
    "@types/styled-components": "5.1.34",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "babel-jest": "29.7.0",
    "dotenv": "16.3.1",
    "dotenv-flow-webpack": "2.0.0",
    "eclint": "2.8.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "27.6.2",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.33.2",
    "jest": "29.7.0",
    "mini-css-extract-plugin": "2.7.7",
    "npm-watch": "0.11.0",
    "prettier": "3.1.1",
    "prop-types": "15.8.1"
  },
  "dependencies": {
    "@babel/core": "7.22.15",
    "@babel/preset-env": "7.22.15",
    "@babel/preset-react": "7.22.15",
    "@babel/preset-typescript": "^7.22.5",
    "@formatjs/intl": "2.9.0",
    "@types/react-dnd": "^3.0.2",
    "babel-loader": "9.1.3",
    "concurrently": "8.2.1",
    "css-loader": "6.8.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.7",
    "enzyme-to-json": "3.6.2",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.3",
    "jsdom": "22.1.0",
    "path": "0.12.7",
    "process": "0.11.10",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-email-editor": "1.7.9",
    "style-loader": "3.3.3",
    "styled-components": "6.0.7",
    "ts-loader": "9.4.4",
    "typescript": "5.2.2",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1",
    "webpack-manifest-plugin": "5.0.0"
  },
  "watch": {
    "custom-js-build": {
      "patterns": [
        "src/customJs"
      ],
      "extensions": "js,ts,tsx,css"
    }
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm:custom-js-watch\" \"npm:dev-server\"",
    "dev-server": "webpack-dev-server --env NODE_ENV=development --config webpack-dev-server.config.js",
    "custom-js-build": "webpack --env NODE_ENV=development",
    "custom-js-watch": "npm-watch custom-js-build",
    "build": "webpack --env NODE_ENV=production",
    "test": "jest",
    "coverage:local": "jest --coverage --watchAll",
    "coverage:ci": "jest --coverage",
    "verify-format": "yarn eslint-check && yarn prettier-check && yarn eclint-check",
    "fix-format": "yarn prettier-fix && yarn eclint-fix",
    "eclint-fix": "eclint fix",
    "eclint-check": "eclint check",
    "eslint-check": "eslint --ext .ts --ext .tsx .",
    "prettier-fix": "prettier --write \"**/**\"",
    "prettier-check": "prettier --check \"**/**\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/customJs/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./src/setupTests.js"
    ]
  }
}
