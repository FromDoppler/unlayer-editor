{
  "name": "unlayer-editor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^14.17.11",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.12",
    "eclint": "^2.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-email-editor": "^1.3.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.0",
    "typescript": "^4.1.2",
    "web-vitals": "^2.1.0"
  },
  "watch": {
    "dev-build": {
      "patterns": [
        "src/customJs"
      ],
      "extensions": "js"
    }
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm-watch\" \"react-scripts start\"",
    "dev-build": "webpack --config webpack.config-dev.js",
    "build": "react-app-rewired build --scripts-version react-scripts build",
    "test": "react-scripts test",
    "coverage:local": "react-scripts test --coverage --watchAll",
    "coverage:ci": "react-scripts test --coverage",
    "eject": "react-scripts eject",
    "verify-format": "yarn eslint-check & yarn prettier-check & yarn eclint-check",
    "eclint-fix": "eclint fix",
    "eclint-check": "eclint check",
    "eslint-check": "eslint --ext .ts --ext .tsx .",
    "prettier": "prettier --write \"**/**\"",
    "prettier-check": "prettier --check \"**/**\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-email-editor": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "concurrently": "^6.2.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.3.2",
    "react-app-rewired": "^2.1.8",
    "webpack-cli": "^4.8.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,tsx,ts}",
      "!**/src/customJs/**",
      "!**/.github/**",
      "!**/.vscode/**",
      "!**/cdn-hepers/**",
      "!**/coverage/**",
      "!**/docs/**",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/setupTests.ts",
      "!**/reportWebVitals.ts",
      "!**/react-app-env.d.ts",
      "!**/App.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
