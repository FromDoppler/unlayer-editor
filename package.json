{
  "name": "unlayer-editor",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.18.0",
    "@types/react": "^16.14.21",
    "@types/react-dom": "^16.9.14",
    "@types/react-email-editor": "^1.1.2",
    "@types/styled-components": "^5.1.17",
    "concurrently": "^6.4.0",
    "babel-loader": "^8.2.3",
    "eclint": "^2.8.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-email-editor": "^1.3.0",
    "styled-components": "^4.4.1",
    "typescript": "^4.5.2",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "watch": {
    "dev-build": {
      "patterns": [
        "src/customJs"
      ],
      "extensions": "js"
    }
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm-watch\" \"node scripts/start.js\"",
    "dev-build": "webpack --config webpack.config-dev.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js",
    "coverage:local": "node scripts/test.js --coverage --watchAll",
    "coverage:ci": "node scripts/test.js --coverage",
    "verify-format": "yarn eslint-check && yarn prettier-check && yarn eclint-check",
    "eclint-fix": "eclint fix",
    "eclint-check": "eclint check",
    "eslint-check": "eslint --ext .ts --ext .tsx .",
    "prettier": "prettier --write \"**/**\"",
    "prettier-check": "prettier --check \"**/**\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,tsx,ts}",
      "!**/src/customJs/**",
      "!**/.github/**",
      "!**/.vscode/**",
      "!**/cdn-hepers/**",
      "!**/coverage/**",
      "!**/docs/**",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/setupTests.ts",
      "!**/reportWebVitals.ts",
      "!**/react-app-env.d.ts",
      "!**/App.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
